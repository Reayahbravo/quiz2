
<br clear="all">
<div class="margin50">

<%= form_for(@idea) do |f| %>
    <% if @idea.errors.present? %>
      <p>
        <%= @idea.errors.full_messages.join(', ') %>
      </p>
    <% end %>
    <br clear="all">

    <div>
      <%= f.label(:title) %>
      <%= f.text_field(:title, class: "hundyP") %>
    </div>

    <div class="marginTop">
      <%= f.label(:description) %>
      <%= f.text_area(:description, rows: 6, class: "hundyP") %>
    </div>

    <div class="marginTop">
        <%= f.label(:review) %><br>
        <%= f.text_area(:review, rows: 6, class: "hundyP") %>
    </div>
  
    <%= f.submit(class: "btn btn-outline-primary marginTop") %>
<% end %>

  
   